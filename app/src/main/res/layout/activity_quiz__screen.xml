<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:id="@+id/top"
        android:background="@drawable/quize_top_back"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="95dp"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/loginButtton"
            android:gravity="center"
            android:id="@+id/tv_round"
            android:text="Round  1 "
            android:textColor="#fff"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/notosans_regular"
            android:paddingTop="5dp"
            android:text=" 1"
            android:textColor="#fff"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sourcesansprosemibold"
            android:paddingTop="5dp"
            android:text="Question:"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_question_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sourcesansprosemibold"
            android:paddingTop="5dp"
            android:text="  1"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:id="@+id/pro"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/simpleProgressBar1"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="5sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="0dp"
            android:max="1000"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:progressDrawable="@drawable/progressbar"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/simpleProgressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="5sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="0dp"
            android:max="1000"

            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:progress="1000"
            android:progressDrawable="@drawable/progressbar"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/simpleProgressBarEmpty"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="5sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:elevation="0dp"
            android:max="1000"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"

            android:progress="1000"
            android:progressDrawable="@drawable/progres_null"
            android:visibility="gone" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/pro"
        android:layout_marginRight="20dp"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/sourcesansprosemibold"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Question Here"
            android:textColor="#fff"
            android:textSize="17dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_optiona"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/show_option"
                    android:gravity="center_vertical"
                    android:text="Option"
                    android:paddingLeft="65dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_optionb"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/show_option"
                    android:textStyle="bold"
                    android:paddingLeft="65dp"
                    android:gravity="center_vertical"
                    android:text="Option"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_optionc"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/show_option"
                    android:textStyle="bold"
                    android:paddingLeft="65dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="Option"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_optiond"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/show_option"
                    android:textStyle="bold"
                    android:paddingLeft="65dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="Option"
                    android:textSize="15dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    //android:progressDrawable="@drawable/progres_color"
</RelativeLayout>