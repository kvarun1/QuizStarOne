<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_bg"
    android:orientation="vertical"
    tools:context=".allactivity.Top_Up_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroundimage"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/arrow" />


        <ImageView
            android:id="@+id/imagesView"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/app_logo" />

        <RelativeLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/balance_background"
            android:backgroundTint="#9437FF">


            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/left_corner"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="$ 49.08/K 7577"
                android:textColor="#9437FF"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />



        </RelativeLayout>
        <!--        <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/balance_background"
                    android:gravity="center"
                    android:text="$ 49.08/K 7577"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />-->
    </RelativeLayout>

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/iap_container_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
           android:paddingBottom="7dp"
            android:fontFamily="@font/avenir"
            android:gravity="center"
            android:text="Choose a pack"
            android:textColor="@color/gold"
            android:textSize="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:scrollbars="vertical" />
    </LinearLayout>


</LinearLayout>