<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    android:orientation="vertical"
    tools:context=".allactivity.Api_Payment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/backgroundimage"
        android:paddingLeft="20dp"
        android:paddingTop="0dp"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/arrow" />


        <ImageView
            android:id="@+id/imagesView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/name_logo" />

        <RelativeLayout
            android:id="@+id/tv_new"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/btn_outline"
            android:visibility="gone">


            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="80dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/avenir"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="+ New "
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="gone" />


        </RelativeLayout>
        <!--        <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/balance_background"
                    android:gravity="center"
                    android:text="$ 49.08/K 7577"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />-->
    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/app_logo"
        android:visibility="gone" />

    <TextView
        android:id="@+id/sign_up_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Add Payment"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout4"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="@dimen/_12sdp">

        <EditText
            android:id="@+id/card_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Card Number"
            android:inputType="number"
            android:paddingBottom="@dimen/_20sdp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_12ssp" />

        <EditText
            android:id="@+id/Exp_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_no"
            android:layout_marginTop="@dimen/_5sdp"
            android:hint="Exp_month"
            android:inputType="number"
            android:paddingBottom="@dimen/_20sdp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_12ssp" />

        <EditText
            android:id="@+id/Exp_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Exp_month"
            android:layout_marginTop="@dimen/_5sdp"
            android:hint="Exp_year"
            android:inputType="number"
            android:paddingBottom="@dimen/_20sdp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_12ssp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/CVV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Exp_year"
            android:layout_marginTop="@dimen/_5sdp"
            android:hint="CVV"
            android:inputType="number"
            android:paddingBottom="@dimen/_20sdp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_12ssp" />

        <EditText
            android:id="@+id/ammout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CVV"
            android:layout_marginTop="@dimen/_5sdp"
            android:hint="Amount"
            android:inputType="number"
            android:paddingBottom="@dimen/_20sdp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_12ssp" />


        <Button
            android:id="@+id/signin_but2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/ammout"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/login_button"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />


    </RelativeLayout>
</LinearLayout>