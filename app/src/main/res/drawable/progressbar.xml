<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background properties progress like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient android:startColor="#27022E"
                android:centerColor="#26022C"
                android:endColor="#26022C"
                />
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient

                    android:startColor="#4174FF"
                    android:centerColor="#4174FF"
                    android:endColor="#4174FF"
                    android:angle="45"
                    />

                <corners android:radius="10dp"/>

            </shape>

        </clip>

    </item>


</layer-list>